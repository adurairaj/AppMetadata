{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "table schema",
  "properties": {
    "type": {
      "type": "string",
      "title": "type of table"
    },
    "columns": {
      "type": "object",
      "title": "list of columns of the table",
      "patternProperties": {
        "[a-zA-z]+": {
          "columntype": {
            "type": "string"
          },
          "maxlength": {
            "type": "integer"
          },
          "minlength": {
            "type": "integer"
          },
          "default": {
            "type": "string"
          },
          "scale": {
            "type": "integer",
            "default": 0
          }
        }
      }
    }
  }
}
