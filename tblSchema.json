{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "table schema",
  "properties": {
    "type": {
      "type": "string",
      "title": "type of table"
    },
    "columns": {
      "type": "array",
      "title": "list of columns of the table",
      "items": {
        "type": "object",
        "anyOf": [
          {
            "properties": {
              "name": {
                "type": "string"
              },
              "varchar": {
                "$ref": "#/definitions/varchar"
              }
            },
            "additionalProperties": false
          },
          {
            "properties": {
              "name": {
                "type": "string"
              },
              "numeric": {
                "$ref": "#/definitions/decimal"
              }
            },
            "additionalProperties": false
          },
          {
            "properties": {
              "name": {
                "type": "string"
              },
              "date": {
                "$ref": "#/definitions/date"
              }
            },
            "additionalProperties": false
          },
          {
            "properties": {
              "name": {
                "type": "string"
              },
              "text": {
                "$ref": "#/definitions/text"
              }
            },
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "definitions": {
    "varchar": {
      "type": "object",
      "properties": {
        "maxlength": {
          "type": "number"
        },
        "minlength": {
          "type": "number"
        },
        "validation": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "date": {
      "type": "object",
      "properties": {
        "format": {
          "type": "string"
        },
        "validation": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "decimal": {
      "type": "object",
      "properties": {
        "precision": {
          "type": "integer"
        },
        "scale": {
          "type": "integer"
        },
        "validation": {
          "type": "string"
        },
        "maxvalue": {
          "type": "integer"
        },
        "minvalue": {
          "type": "integer"
        },
        "validation":{
          "type":"string"
        }
      },
      "additionalProperties": false
    },
    "text": {
      "type": "object",
      "properties": {
        "maxlength": {
          "type": "integer"
        },
        "languages": {
          "type": "string"
        },
        "additionalProperties": false
      }
    },
    "xml": {},
    "json": {}
  }
}
